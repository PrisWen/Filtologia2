                    </Grid.RowDefinitions>
                    <Rectangle HorizontalAlignment="Left" Height="330" Stroke="White" StrokeThickness="5" VerticalAlignment="Top" Width="400" Margin="0,-50,0,0">
                        <Rectangle.Fill>
