                            </GridView.ItemTemplate>
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                            </GridView.ItemsPanel>
                        </GridView>
                    </ScrollViewer>
                    <Grid>
                        <FlipView x:Name="flipView" 
                                  ItemsSource="{Binding Tema.Subtitulos[3].Image}"
                                  VerticalAlignment="Top">
                            <FlipView.ItemTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding}"/>
                                </DataTemplate>
                            </FlipView.ItemTemplate>
                            <FlipView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel/>
                                </ItemsPanelTemplate>
                            </FlipView.ItemsPanel>
                        </FlipView>
                        <ListBox Height="100"
                                 VerticalAlignment="Bottom"
                                 SelectedItem="{Binding SelectedItem, ElementName=flipView, Mode=TwoWay}"
                                 ItemsSource="{Binding Tema.Subtitulos[3].Image}"
                                 ItemContainerStyle="{StaticResource ContextControlItemStyle}"
                                 IsTabStop="False"
                                 Padding="20"
                                 x:Name="listControl">
                            <ListBox.Background>
                                <SolidColorBrush Color="Teal" Opacity="0.5"/>
                            </ListBox.Background>

                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Right"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                        </ListBox>
                    </Grid>
                </GridView>
            </DataTemplate>
        </HubSection>
    </Hub>
</Page>
