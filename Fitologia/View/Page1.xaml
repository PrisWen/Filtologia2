                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle HorizontalAlignment="Left" Height="472" Stroke="White" StrokeThickness="5" VerticalAlignment="Top" Width="400" Margin="0,278,0,-50" Grid.RowSpan="2">
                        <Rectangle.Fill>
