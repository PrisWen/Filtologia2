                    </Rectangle>
                    <Ellipse HorizontalAlignment="Left" Height="340" Stroke="White" VerticalAlignment="Top" Width="340" Margin="-155,110,0,0" Grid.RowSpan="2" StrokeThickness="5">
                        <Ellipse.Fill>
                            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/Image/Kantuta_Bolivia.jpg"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Grid>
            </DataTemplate>
        </HubSection>
